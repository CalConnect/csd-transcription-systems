diagram WLCS {
  association {
    owner SystemCode
    member_type inheritance
    member String
  }

  class WrittenLanguagesConversionSystem {
    +code: SystemCode
    +name: String
    +sourceSpelling: SpellingSystem
    +targetSpelling: SpellingSystem
    +identifyingSegment: String
    +relations: CSRelation[0..*]
    +status: CSStatus
    +remarks: String
  }

  class SpellingSystem {
    +language: iso639Code[0..1]
    +scriptCode: iso15924Code
    +countryCode: iso3166Code[0..1]
    +extension: String[0..1]
  }

  enum CSStatus {
    preferred
    deprecated
  }

  association {
    owner WrittenLanguagesConversionSystem
    member_type direct
    member SpellingSystem
  }

  association {
    owner WrittenLanguagesConversionSystem
    member_type direct
    member CSStatus
  }

  class CSRelation {
    +systemCode: SystemCode
    +type: CSRelationType[0..*]
  }

  association {
    owner WrittenLanguagesConversionSystem
    member_type direct
    member CSRelation
  }

  enum CSRelationType {
    aliasOf
    adoptedFrom
    supersedes
    replacedBy
    relatedTo
    basedOn
  }

  association {
    owner CSRelation
    member_type direct
    member CSRelationType
  }

}
